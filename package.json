{
  "name": "pando-server",
  "version": "0.0.1",
  "description": "Pando Server",
  "main": "dist/index.js",
  "scripts": {
    "test": "node -r ts-node/register bin/test.ts",
    "watch": "nodemon",
    "build": "rm -rf dist && npx tsc && rm -rf dist/bin && rm -rf dist/tests",
    "build:watch": "rm -rf dist && npx tsc -w && rm -rf dist/bin && rm -rf dist/tests",
    "type-check": "npx tsc --noEmit",
    "docs": "npx typedoc",
    "docs:watch": "npx typedoc --watch",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write ."
  },
  "author": "Jak Giveon <jak@feriority.com>",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-typescript": "^7.22.5",
    "@japa/assert": "^1.4.1",
    "@japa/run-failed-tests": "^1.1.1",
    "@japa/runner": "^2.5.1",
    "@japa/spec-reporter": "^1.3.3",
    "@types/amqplib": "^0.10.1",
    "@types/cli-color": "^2.0.6",
    "@types/dotenv": "^8.2.0",
    "@types/luxon": "^3.3.0",
    "adonis-preset-ts": "^2.1.0",
    "c8": "^8.0.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^5.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.24.8",
    "typedoc-plugin-coverage": "^2.1.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "dist"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "dependencies": {
    "cli-color": "^2.0.3",
    "dotenv": "^16.3.1",
    "figlet": "^1.7.0",
    "mkdirp": "^3.0.1",
    "socket.io": "^4.7.3",
    "winston": "^3.11.0"
  }
}
